
pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running TestNG tests...'
                
                // Use dir() instead of cd
                dir('D:/SeleniumWorkspace/S12BlazedemoPOM') {
                    bat 'mvn test'
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
   
